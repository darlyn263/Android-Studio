    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
    <!-- Top Right Bubble -->
    <item android:top="500dp" android:right="12dp">
        <shape android:shape="oval">
            <size android:width="25dp" android:height="25dp"/>
            <solid android:color="#F44336"/>
        </shape>
    </item>


    <!-- Top Right Bubble -->
    <item android:top="700dp" android:right="100dp">
        <shape android:shape="oval">
            <size android:width="250dp" android:height="250dp"/>
            <solid android:color="#091010"/>
        </shape>
    </item>

    <!-- Top Right Bubble -->
    <item android:top="600dp" android:right="100dp">
        <shape android:shape="oval">
            <size android:width="250dp" android:height="250dp"/>
            <solid android:color="#00BCD4"/>
        </shape>
    </item>

</layer-list>